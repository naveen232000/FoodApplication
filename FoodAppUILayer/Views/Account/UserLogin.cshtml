@model  FoodAppUILayer.Models.LoginViewModel
@using CaptchaMvc.HtmlHelpers

@{
    ViewBag.Title = "UserLogin";
}


<div class=" container col-6 pt-2 " style="margin-left:390px">
    <h2 class="p-3 ms-3">User Login</h2>
    <p class="text-success">@TempData["SuccessMessage"]</p>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @using (Html.BeginForm("UserLogin", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-12">
                @Html.LabelFor(m => m.UserName, "Enter Username :", new { @class = "control-label " })
            </div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-12">
                @Html.LabelFor(m => m.Password, "Enter Password :", new { @class = "control-label " })
            </div>
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.MathCaptcha()
                <button type="submit" class="btn btn-outline-primary">Login</button>
                <a href="@Url.Action("UserResetPassword", "Account")" class="btn btn-outline-danger">Forgot Password?</a>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}