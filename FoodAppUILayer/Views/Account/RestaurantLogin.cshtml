@model FoodAppUILayer.Models.RestaurantViewModel



@{
    ViewBag.Title = "RestaurentLogin";
}


<div class="container mt-3" style="background-image: url('@Url.Content("~/Images/futuristic-abstract-background-with-circular-shapes.jpg")'); background-size:cover;">
 
    <div class="row">
  

        <div class="col m-4 w-100 h-100">
            <div class="col-12 text-white">
                <h1>Welcome!</h1>
            </div>
        </div>
        <div class="col mt-4 mb-4 text-white">
            <h2>Restaurant Login</h2>
            @using (Html.BeginForm("RestaurantLogin", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="">


                    <div class="form-group ">

                        @Html.LabelFor(m => m.UserName, "Enter Username:", new { @class = "control-label" })


                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">

                        @Html.LabelFor(m => m.Password, "Enter Password:", new { @class = "control-label" })

                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div>
                            <button type="submit" class="btn  btn-success mt-3">Login</button>
                            <p class="text-danger mt-3">*Note: UserName is your EmailId &amp; PassWord Is your RestaurantId</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}