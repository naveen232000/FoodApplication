@model IEnumerable<FoodAppDALLayer.Models.FoodItem>

@{
    ViewBag.Title = "AllFoodItems";
}

<div class="d-flex justify-content-end">
    <input type="text" id="searchInput" onkeyup="myFunction()" placeholder="Search for category.." style="padding: 5px; border-radius: 5px; border: 1px solid #ccc;">
</div>
<div class="container" id="myContainer">

    <div class="row mt-3" >
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-4 col-sm-6 mb-4">
                <div class="card h-100 shadow p-3  bg-body rounded">
                    <img src="data:image;base64,@item.Image" class="card-img-top" alt="..." style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                        <p class="mt-auto d-flex justify-content-between">
                            <span class="btn btn-success d-flex">Rs @Html.DisplayFor(modelItem => item.Price) /-</span>   <category class="text-secondary d-flex">@Html.DisplayFor(modelItem => item.Category.CategoryName)</category>
                        </p>

                        <span class="d-flex  justify-content-end">
                            @using (Html.BeginForm("AddToCart", "User", FormMethod.Post))
                            {
                                @Html.Hidden("foodItemId", item.FoodId)
                                <button type="submit" class="btn btn-warning d-flex"><i class="bi bi-cart"></i> Add to cart</button>
                            }
                        </span>

                    </div>
                </div>
            </div>
        }
    </div>
</div>


<script>
    function myFunction() {
        var input, filter, container, categories, i, txtValue;
        input = document.getElementById('searchInput');
        filter = input.value.toUpperCase();
        container = document.getElementById("myContainer");
        categories = container.getElementsByTagName('category');
        for (i = 0; i < categories.length; i++) {
            txtValue = categories[i].textContent || categories[i].innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                categories[i].closest('.col-lg-4').style.display = ""; // Display the card column
            } else {
                categories[i].closest('.col-lg-4').style.display = "none"; // Hide the card column
            }
        }
    }
</script>