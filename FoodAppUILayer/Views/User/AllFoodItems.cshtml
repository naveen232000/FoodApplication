@model IEnumerable<FoodAppDALLayer.Models.FoodItem>

@{
    ViewBag.Title = "AllFoodItems";
}


<div class="container text-center ">
    <div class="row mt-3">
        @foreach (var item in Model)
        {
            <div class="col">

                <div class="card" style="width: 18rem; height: 28rem">
                    <img src="data:image;base64,@item.Image" class="card-img-top" width="286" height="190" alt="...">
                    <div class="card-body">
                        <h5 class="card-title h-25"> @Html.DisplayFor(modelItem => item.Name)</h5>
                        <p class="card-text  w-100 h-50"> @Html.DisplayFor(modelItem => item.Description) </p>
                        <span class="btn btn-success">Rs @Html.DisplayFor(modelItem => item.Price) /-</span>
                        @using (Html.BeginForm("AddToCart", "User", FormMethod.Post))
                        {
                            @Html.Hidden("foodItemId", item.FoodId)
                            <button type="submit" class="btn btn-primary"><i class="bi bi-cart"></i> Add to cart</button>
                        }
                       
                    </div>
                </div>
            </div>
        }
    </div>
</div>