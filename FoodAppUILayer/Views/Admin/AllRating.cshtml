@model IEnumerable<FoodAppDALLayer.Models.Rating>

@{
    ViewBag.Title = "AllRating";
}

<h2 class="text-center">User Rating</h2>


<table class="table">
    <thead class="table-success">
        <tr>
            <th>
                <p>Food Name</p>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Like)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RatingCount)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodItem.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    <i class="bi bi-suit-heart-fill" style="color:@(item.Like ? "red" : "none");"></i>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
                <td>
                    @for (int i = 0; i < item.RatingCount; i++)
                    {
                        <i class="bi bi-star-fill" style="color:darkorange"></i>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>
