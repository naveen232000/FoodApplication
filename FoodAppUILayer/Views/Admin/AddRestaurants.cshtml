@model FoodAppDALLayer.Models.Restaurant

@{
    ViewBag.Title = "AddRestaurants";
}




<div class="text-black">
    <h1>
        <a href="@Url.Action("AllRestaurant")" style="color:black !important">
            <i class="bi bi-arrow-left-circle-fill"></i>
        </a>
    </h1>
</div>


<div class="container">

    <div class="row">
        <div class="col-sm-4">

        </div>
        <div class="col-sm-8 border-3 rounded ">

            @using (Html.BeginForm("AddRestaurants", "Admin", FormMethod.Post, new { enctype = "multipart/form-data",@class = "col-md-6" }))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal mt-2">
                <h4> <i class="bi bi-building-fill"></i> Add Restaurant</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group mt-1">
                    <label><i class="bi bi-person"></i> Restaurant Name</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mt-1">
                    <label><i class="bi bi-geo-alt"></i> Restaurant Address</label>

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mt-1">
                    <label><i class="bi bi-geo-alt"></i> City</label>

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group mt-1">
                    <label><i class="bi bi-envelope"></i> Email</label>

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mt-1">
                    <label><i class="bi bi-phone"></i>Mobile Number</label>

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group m-1">
                    <label><i class="bi bi-image-alt"></i> Image</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Image, new { type = "file", @class = "form-control", id = "imageInput" })
                        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group mt-1">
                    <label><i class="bi bi-crosshair"></i>Latitude</label>

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Latitude, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Latitude, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mt-1">
                    <label><i class="bi bi-crosshair"></i>Longitude</label>

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Longitude, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Longitude, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mt-3">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add" class="btn btn-default bg-success" />
                    </div>
                </div>
            </div>
            }
        </div>

    </div>
</div>