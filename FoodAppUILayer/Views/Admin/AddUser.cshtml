@model FoodAppDALLayer.Models.User

@{
    ViewBag.Title = "AddUser";
}

<div class="text-black">
    <h1>
        <a href="@Url.Action("AllUsers")" style="color:black !important">
            <i class="bi bi-arrow-left-circle-fill"></i>
        </a>
    </h1>
</div>

<div class="container">

    <div class="row">
        <div class="col-sm-4">

        </div>
        <div class="col-sm-8 border-3 rounded ">


            @using (Html.BeginForm("AddUser", "Admin", FormMethod.Post, new { @class = "col-md-6" }))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Add User</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group mt-1">
                    <label><i class="bi bi-person"></i> First Name</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group mt-1">
                    <label><i class="bi bi-person"></i> Last Name</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group mt-1">
                    <label><i class="bi bi-person"></i> User Name</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mt-1">
                    <label><i class="bi bi-Email"></i> Email</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mt-1">
                    <label><i class="bi bi-phone"></i> Mobile Number</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mt-1">
                    <label><i class="bi bi-key"></i> Password</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group mt-3">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add User" class="btn btn-default bg-success" />
                    </div>
                </div>
            </div>
            }
        </div>

    </div>
</div>