@{
    ViewBag.Title = "Home Page";
}



<div id="carousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#carousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="3000">
            <img src="~/Images/6.png" class="d-block w-100" height="400" alt="...">
        </div>
        <div class="carousel-item" data-bs-interval="3000">
            <img src="~/images/4.png" class="d-block w-100" height="400" alt="...">
        </div>
        <div class="carousel-item" data-bs-interval="3000">
            <img src="~/images/5.png" class="d-block w-100" height="400" alt="...">
        </div>
        <div class="carousel-item" data-bs-interval="3000">
            <img src="~/images/7.png" class="d-block w-100" height="400" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<div class="col-md-12 text-center mt-2">
    <h2 class="mb-4 text-uppercase">Our Delicious Selection</h2>
    <div class="row">
     
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="~/Images/Img3.jpg" class="card-img-top" alt="Butter Chicken" width="286" height="286">
                <div class="card-body">
                    <h5 class="card-title">Butter Chicken</h5>
                    <p class="card-text">A rich and creamy tomato-based curry with tender pieces of chicken, flavoured with aromatic spices and finished with a generous dollop of butter</p>
                    <a href="@Url.Action("RegisterUser","Account")" class="btn btn-primary">Order Now</a>
                </div>
            </div>
        </div>

       
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="~/Images/Img5.jpg" class="card-img-top" alt="Naan Bread" width="286" height="286">
                <div class="card-body">
                    <h5 class="card-title">Naan bread</h5>
                    <p class="card-text">Soft, pillowy, and slightly charred, naan is a classic Indian Bread</p>
                    <a href="@Url.Action("RegisterUser","Account")" class="btn btn-primary">Order Now</a>
                </div>
            </div>
        </div>

  
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="~/Images/Img2.jpg" class="card-img-top" alt="Fresh Sushi" width="286" height="286">
                <div class="card-body">
                    <h5 class="card-title">Chicken Biryani</h5>
                    <p class="card-text">Fragrant and flavorful, this rice dish features marinated chicken cooked with aromatic spices, saffron-infused rice, and caramelized onions.</p>
                    <a href="@Url.Action("RegisterUser","Account")" class="btn btn-primary">Order Now</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
   
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="~/Images/Img1.jpg" class="card-img-top" alt="Paneer Tikka" width="286" height="286">
                <div class="card-body">
                    <h5 class="card-title">Paneer Tikka</h5>
                    <p class="card-text">Vegetarian delight! Paneer is marinated in a spiced yogurt mixture, skewered, and grilled to perfection</p>
                    <a href="@Url.Action("RegisterUser","Account")" class="btn btn-primary">Order Now</a>
                </div>
            </div>
        </div>


        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="~/Images/Img4.jpg" class="card-img-top" alt="Dal Makhani" width="286" height="286">
                <div class="card-body">
                    <h5 class="card-title">Dal Makhani</h5>
                    <p class="card-text">A comforting lentil dish made from black lentils and kidney beans.</p>
                    <a href="@Url.Action("RegisterUser","Account")" class="btn btn-primary">Order Now</a>
                </div>
            </div>
        </div>
    </div>
</div>
