@model IEnumerable<FoodAppDALLayer.Models.FoodItem>

@{
    ViewBag.Title = "AllFoodItems";
}
<style>
    .mt-100 {
        margin-top: 100px;
    }

    .card {
        border-radius: 7px !important;
        border-color: #e1e7ec;
    }

    .mb-30 {
        margin-bottom: 30px !important;
    }

    .card-img-tiles {
        display: block;
        border-bottom: 1px solid #e1e7ec;
    }

    a {
        color: #0da9ef;
        text-decoration: none !important;
    }

    .card-img-tiles > .inner {
        display: table;
        width: 100%;
        height:50%;
    }

    .card-img-tiles .main-img, .card-img-tiles .thumblist {
        display: table-cell;
        width: 65%;
        height:50%;
        padding: 15px;
        vertical-align: middle;
    }

        .card-img-tiles .main-img > img:last-child, .card-img-tiles .thumblist > img:last-child {
            margin-bottom: 0;
        }

        .card-img-tiles .main-img > img, .card-img-tiles .thumblist > img {
            display: block;
            width: 100%;
            height:50%;
            margin-bottom: 6px;
        }

    .thumblist {
        width: 35%;
        border-left: 1px solid #e1e7ec !important;
        display: table-cell;
        width: 65%;
        padding: 15px;
        vertical-align: middle;
    }



    .card-img-tiles .thumblist > img {
        display: block;
        width: 100%;
        margin-bottom: 6px;
    }

    .btn-group-sm > .btn, .btn-sm {
        padding: .45rem .5rem !important;
        font-size: .875rem;
        line-height: 1.5;
        border-radius: .2rem;
    }
</style>

<h2 class="text-center">Food Items</h2>


<div class="text-black">
    <h3>
        <a href="@Url.Action("AddFood")" style="color: forestgreen !important; text-decoration: none">
            <i class="bi bi-plus-circle" style="color:forestgreen"></i> Add FoodItem
        </a>
    </h3>
</div>


<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-md-4 col-sm-6">
            <div class="card h-100 mb-30">
                <a class="card-img-tiles" href="#" data-abc="true">
                    <div class="inner">
                        <div class="main-img h-25"> <img src="data:image;base64,@item.Image" alt="Image" style="height: 200px; object-fit: cover;"  /></div>
                    </div>
                </a>
                <div class="card-body text-center">
                    <h4 class="card-title"> @Html.DisplayFor(modelItem => item.Name)</h4>
                    <h6 class="card-title"> @Html.DisplayFor(modelItem => item.Description)</h6>
                    <p class="text-muted"> Rs- @Html.DisplayFor(modelItem => item.Price)</p>
                    <div class="d-flex">
                        <h2 ><i class="bi bi-toggle2-on" style="color:@(item.Availability ? "Green" : "Red");"></i></h2>
                        <h3 class="ms-5">
                            <a href="@Url.Action("EditFoodItem", new { id = item.FoodId})" style="color:deepskyblue !important; text-decoration: none">
                                <i class="bi-pencil-square" style="color: deepskyblue "></i>
                            </a>

                            <a href="@Url.Action("DeleteFood", new { id = item.FoodId}) " style="color: orange !important; text-decoration: none">
                                <i class="bi bi-trash" style="color: orange"></i>
                            </a>
                        </h3>
                    </div>
                   
                </div>
            </div>
        </div>


    }
</div>

